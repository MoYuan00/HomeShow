<c3p0-config>

    <default-config>
        <property name="driverClass">com.mysql.jdbc.Driver</property>
        <property name="jdbcUrl">jdbc:mysql://localhost:3306/homeshow?serverTimezone=Asia/Shanghai&amp;characterEncoding=UTF8&amp;autoReconnect=true</property>
        <property name="user">root</property>
        <property name="password">123456</property>

        <property name="acquireIncrement">5</property>
        <property name="intialPoolsize">10</property>
        <property name="maxPoolsize">20</property>
        <property name="maxIdleTime" value="1800"/>
        <property name="preferredTestQuery" value="SELECT 1"/>
        <property name="idleConnectionTestPeriod" value="18000"/>
        <property name="testConnectionOnCheckout" value="true"/>
        <property name="maxWait" value="20000"/>
        <property name="validationQuery" value="SELECT 1"/>
        <property name="testWhileIdle" value="true"/>
        <property name="testOnBorrow" value="true"/>
        <property name="timeBetweenEvictionRunsMillis" value="3600000"/>
        <property name="numTestsPerEvictionRun" value="50"/>
        <property name="minEvictableIdleTimeMillis" value="120000"/>
        <property name="removeAbandoned" value="true"/>
        <property name="removeAbandonedTimeout" value="6000000"/>
    </default-config>

    <named-config name="mysql">
        <property name="driverClass">com.mysql.jdbc.Driver </property>
